CREATE TABLE songs (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    title TEXT,
    artist TEXT,
    album TEXT,
    duration INTEGER,
    genre text
);

INSERT INTO songs (id, title, artist, album, duration,genre)
